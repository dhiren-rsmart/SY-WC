@using smART.MVC.Present.Extensions
@model smART.ViewModel.ReportFilter
@{
  Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_LayoutReportsDetails.cshtml";  
  ViewBag.Feature = smART.Common.EnumFeatures.Reports_Report; 
  ViewBag.Transaction = true;
}


<script type="text/javascript">

  function onPartyChange(e)
  {
    $("#PartyID").val(e.value);
  }

  
  function RefreshReport()
  {
    var item = new Object();
    item = new Object({ FocusAreaID: $("#FocusAreaID").val(), ReportName: $("#ReportName").val(), PartyID: $("#PartyID").val(), LicenseID: $("#LicenseID").val(), DataSet_Name: $("#DataSet_Name").val(), Parameters: $("#Parameters").val() });
    Refresh(item)
  }
</script>

